<script id="template" type="text/x-handlebars-template">
  <p class="lead">{{date}} er dagen i {{place}} {{verb}} med</p>
  
  <h2>
    {{#if hours}}{{hours}} {{plural hours 'time' 'r'}}{{/if}}
    {{#if minutes}}
      <small>og</small>
    {{/if}}
  </h2>
  {{#if minutes}}
    <h2>{{minutes}} {{plural minutes 'minut' 'ter'}}</h2>
  {{/if}}
  
  <p class="lead">siden {{solstice}}</p>
  <small>Det er {{difference}} {{plural difference 'minut' 'ter'}} {{direction}} end i går.</small>
  <small>Dagens længde er {{day_length.hours}} {{plural day_length.hours 'time' 'r'}} og {{day_length.minutes}} {{plural day_length.minutes 'minut' 'ter'}}.</small>  
</script>
